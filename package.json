{
  "name": "mc-status-api",
  "version": "1.0.0",
  "description": "Minecraft服务器状态查询API - 支持Java版和基岩版",
  "main": "app.js",
  "bin": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "npx pkg . --out-path dist",
    "build:win": "npx pkg . --targets node18-win-x64 --out-path dist",
    "build:linux": "npx pkg . --targets node18-linux-x64 --out-path dist",
    "build:mac": "npx pkg . --targets node18-macos-x64 --out-path dist",
    "build:all": "npx pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "mc-ping-updated": "^0.1.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "logs/**/*",
      "ssl/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "minecraft",
    "api",
    "server",
    "status",
    "java",
    "bedrock",
    "srv"
  ],
  "author": "beichen-leo",
  "license": "GPL-3.0-only"
}
